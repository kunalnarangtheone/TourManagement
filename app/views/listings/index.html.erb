<p id="notice"><%= notice %></p>

<h1>All Listings</h1>

<% if @listings.empty? %>
  <%= render 'no_results' %>
<% else %>

  <table>
    <thead>
    <tr>
      <th>User</th>
      <th>Tour</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.user %></td>
        <td><%= listing.tour %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= button_to 'Destroy Listing', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= link_to 'New Listing', new_listing_path %>
