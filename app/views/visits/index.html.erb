<p id="notice"><%= notice %></p>

<h1>Visits</h1>

<% if @visits.empty? %>
  <%= render 'no_results' %>
<% else %>

  <table>
    <thead>
    <tr>
      <th>Tour</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.tour %></td>
        <td><%= visit.location %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= button_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= link_to 'New Visit', new_visit_path %>
