<p id="notice"><%= notice %></p>

<h1>
  Review
</h1>

<p>
  <strong>User:</strong>
  <%= @review.get_user_name %>
</p>

<p>
  <strong>Tour:</strong>
  <%= @review.get_tour_name %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @review.subject %>
</p>

<p>
  <strong>Content:</strong>
  <%= @review.content %>
</p>

<% if current_user_can_modify_given_review?(@review) %>
  <%= link_to 'Edit', edit_review_path(@review) %>
  <%= button_to 'Delete', @review, method: :delete, data: {confirm:'Are you sure?'} %>
<% end %>
