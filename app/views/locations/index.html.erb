<p id="notice"><%= notice %></p>

<h1>All Locations</h1>

<% if @locations.empty? %>
  <%= render 'no_results' %>
<% else %>

  <table>
    <thead>
    <tr>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.state %></td>
        <td><%= location.country %></td>
        <td><%= link_to 'Show', location %></td>
        <% if current_user_can_modify_locations? %>
          <td><%= link_to 'Edit', edit_location_path(location) %></td>
          <td><%= button_to 'Destroy Location', location, method: :delete, data: {
              confirm: 'Are you sure?'
          } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<br>

<% if current_user_can_modify_locations? %>
  <%= link_to 'New Location', new_location_path %>
<% end %>

